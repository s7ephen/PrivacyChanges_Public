(function (w) {
	w.tm2BootPosition = 0;
	w.tm2BootAsync = true;
	w.tmPageId = 76

		var skuAttributes = window.skuAttributes || []
		, productOptionsJSON = window.productOptionsJSON || []
		, orderObj = window.orderObj || []
		, tagBreadCrumb = window.tagBreadCrumb || ''
		, categoryIdArray = []
		, nameArray = []
		, skuArray = []
		, qtyArray = []
		, priceArray = []
		, catNameArray = [];

		var SKUsize = 0, key;
		for (key in skuAttributes) {
				if(skuAttributes.hasOwnProperty(key)) SKUsize++
		};

		for(var TMiterate = 0; TMiterate < SKUsize; TMiterate++) {
				categoryIdArray.push(skuAttributes[TMiterate].categoryId.value);
				nameArray.push(skuAttributes[TMiterate].name.value);
				skuArray.push(skuAttributes[TMiterate].sku.value);
				qtyArray.push(skuAttributes[TMiterate].qty.value);
				priceArray.push(skuAttributes[TMiterate].price.value);
				catNameArray.push(skuAttributes[TMiterate].catName.value);
		}

		var categoryId = categoryIdArray.join("|")
		, name = nameArray.join("|")
		, sku = skuArray.join("|")
		, qty = qtyArray.join("|")
		, price = priceArray.join("|")
		, catName = catNameArray.join("|");

		w.tmParam =
			{
				product_category_id: categoryId,
				product_name: name,
				product_sku: sku,
				product_quantity: qty,
				product_price: price,
				product_category: catName,
				pdp_name: productOptionsJSON.name,
				page_breadcrumb: tagBreadCrumb,
				levordref: orderObj.ordId,
				customer_city: orderObj.city,
				customer_county: orderObj.state,
				customer_id: orderObj.memId,
				product_quantity_total: orderObj.totQuantity,
				discount_amount: orderObj.discount,
				customer_postcode: orderObj.billingPostalCode,
				shipping_cost: orderObj.shippingCost,
				tax_amount: orderObj.orderTax,
				customer_country: orderObj.country,
				levrev: orderObj.ordTotal,
				product_amount_total: orderObj.ordSubTotal,
				page_type: $(window.router).get(-1)
			}

	var conf = { host: 'pfna.levexis.com',
		account: 'fossil',
		version: '3',
		async: true,
		cdn: (location.protocol === 'https:') ? 'sec.levexis.com' : 'res.levexis.com',
		waitService: 'wt.tagman.com',
		waitTest: false,
		bootstrap: true,
		param: w.tmParam || {} };
	// do not change values below this line
	function ap(sr , ol) {
			 var e = document.createElement('script');
			 e.src = sr;
			 e.async = true;
			 if (ol) {
				e.onload = e.onerror = function() { if (!this.loaded) { ol(); this.loaded = true; } };
		e.onreadystatechange = function() { if (this.readyState === 'complete' || this.readyState === 'loaded') { this.onload(); } };
			 }
			 var s = document.getElementsByTagName('script')[0];
			 s.parentNode.insertBefore( e , s);
	}
	w.TMAN = w.TMAN || {};
			w.TMAN.startTime = +new Date();
	w.TMAN.asyncLoader = function() {
				TMAN.addContainer( new TMAN.Container(conf.account, w.tmPageId, conf) );
	};
	var tm = '//' + conf.cdn + '/clientfiles/v' + conf.version + '/' + conf.account + '.js';
	if (conf.waitService && conf.waitTest) ap ( '//' + conf.waitService + '/wait/0/' + Math.random() , function() { TMAN.waitLatency=new Date() - TMAN.startTime; } );
	if (conf.async) {
			 w.TMAN.position = {};
			 w.TMAN.doTags = function(p) { TMAN.currentPosition = p; };
			 w.TMAN.addParam = function(n,v) {
		w.tmParam[n]=v;
			 };
