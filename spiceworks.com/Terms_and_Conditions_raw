<script>
(function () {

	// should be moved into JS library
	window.SW_DOWNLOAD_WAIT = true;
	var anchors = document.getElementsByTagName('a'),
		anchor, anchordata,
		noLogin,
		alen = anchors.length,
		i = 0,
		reg = /\/download\//,
		timeout, scheduleClick,
		iters = 0;

	scheduleClick = function (a) {
		clearTimeout(timeout);
		if (window.SW_DOWNLOAD_WAIT) {
			timeout = setTimeout(function () {
				iters++;
				if (iters > 40) window.SW_DOWNLOAD_WAIT = false;
				a.click();
			}, 200);
		}
	};

	for (; i < alen; i++) {
		anchor = anchors[i];
		anchordata = anchor.data || anchor.dataset;
		noLogin = anchor.dataset ? anchor.dataset.noLogin : false;
		if (anchordata.href && anchordata.href.match(reg) ||
			anchor.href && anchor.href.match(reg) && !noLogin) {
			if (anchor.addEventListener) {
				anchor.addEventListener("click", function (e) {
					e.preventDefault();
					scheduleClick(this);
				}, false);
			}
			else {
				anchor.attachEvent("onclick", function (e) {
					e.preventDefault();
					scheduleClick(this);
				});
			}
		}
	}

})();
</script>

