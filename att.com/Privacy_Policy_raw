if (location.pathname == '/Common/about_us/privacy_policy/print_policy.html') {
	pid = 'printversion';
} else {
	
var url = location.href; 
 pid = url.split('=');
 pid = pid[1];
  checkAnc = pid.indexOf('#');
  if(checkAnc != '-1') {
	  pid = pid.split('#');
	  pid = pid[0];
  } 
}

//alert(pid);

function renderPrintLink() {
document.write ('<div id="print">'
			+ '<a href="#print" onclick="open(&#39;/Common/about_us/privacy_policy/print_policy.html&#39;,&#39;&#39;,&#39;width=650,height=600,top=50,screenY=50,left=75,screenX=75,scrollbars=1,menubar=0,resizable=0&#39;)">View our current policy</a>'
			+ '</div>');
}

