            var rem = new Object();
            rem.shopid = { name:"shopid", value:"bdep"};
            rem.action = { name:"action", value:"pageview"};
            rem.origin = { name:"origin", value:"web"};
            rem.contentid = { name:"contentid", value:"corporate-site/artikel/datenschutz/artikel-datenschutz"};
