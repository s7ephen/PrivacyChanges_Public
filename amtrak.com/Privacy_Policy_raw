<script type="text/javascript">
function switchLanguage(lang) {
    MP.SrcUrl=decodeURIComponent('mp_js_orgin_url');MP.UrlLang='mp_js_current_lang';MP.init();
    MP.switchLanguage(MP.UrlLang==lang?'en':lang);
    return false;
}
</script>

