<script type="text/javascript">
    jQuery(document).ready(function() {
        jQuery(".small-text-btn").bind("click", function() {
            jQuery("p").removeClass("enlarged");
            jQuery(".paragraph").removeClass("enlarged");
            jQuery(this).addClass("text-size-active");
            jQuery(".large-text-btn").removeClass("text-size-active");
        })
        jQuery(".large-text-btn").bind("click", function() {
            jQuery("p").addClass("enlarged");
            jQuery(".paragraph").addClass("enlarged");
            jQuery(this).addClass("text-size-active");
            jQuery(".small-text-btn").removeClass("text-size-active");
        })
    });
</script>



