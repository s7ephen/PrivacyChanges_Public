<script>
  $(document).ready(function() {
    $(document).scroll(function() {
      if( $(this).scrollTop() >= 5 ) {
        $("#navbar").addClass("navbar-shadow");
      } else {
        $("#navbar").removeClass("navbar-shadow");
      }
    });
  });
  
</script>



