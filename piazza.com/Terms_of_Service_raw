<script>
  function submitenter(myfield,e) {
    var keycode;
    if (window.event) keycode = window.event.keyCode;
    else if (e) keycode = e.which;
    else return true;

    if (keycode == 13) {
      myfield.form.submit();
      return false;
    } else return true;
  }
  $('document').ready(function() {
    $('#loginModal').on("shown.bs.modal", function() {
      $('#email_field').focus();
    });
  });
</script>

