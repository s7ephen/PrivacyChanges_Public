<script type="text/javascript">
var searchtypeaheadcache = {}, docurl = 'http://wwwdvc.gartner.com/doc/';

$(function(){
  $.ajax({
    cache: false,
    url: '/technology/include/siteSelectMenuOptions.jsp'
  }).done(function(html) {
    html = html.split("Select a Gartner site</option>' +")[1];
    html = html.split('<optgroup label="Gartner Websites">')[0];
    html = html.replace(/&nbsp;/gi,"").replace(/' \+/g,"").replace(/&/g,'&amp;');
    html = html.replace(/<option value="/gi,'<li><a href="//my.gartner.com/portal/server.pt?gr=ci&amp;product=');
    html = html.replace(/<\/option>/gi, '</a></li>').replace("'","");
    html = html.replace(/<optgroup label="/gi, '<li class="techHeader2header">');
    html = html.replace(/"><\/optgroup>/gi,'</li>').replace(/\+/gi,'').replace(/'/gi,'');
    $('ul.dropdown-menu').append(html);
  });


  $('a.other-sites-dropdown-toggle, .techHeader2-modal').click(function(e) {
    $('#techHeader2-dropdown').toggle();
  });

  // $('#gSearchForm .iconsearch').click(function(e) {
  //   $('#gSearchForm').submit();
  // });

// setTimeout(function() {
var kwPos = 'left bottom';
if ($('body').hasClass('site-search')) kwPos = 'left+5px bottom';
$('.marketing .authenticate .btn-group .other-sites').off('click')
.on('click', function(e) {
e.preventDefault();
e.stopPropagation();
$(this).parent().toggleClass('open');
$('html').on('click', function(e) {
$('.marketing .authenticate .btn-group').removeClass('open');
$('html').off('click');
});
});
setTimeout(function() {
$('.iconsearch').off('click').on('click', function(e) {
e.stopPropagation();
e.preventDefault();
submitSearch('gSearchForm','');
});
}, 2000);
try {
$.widget( "custom.catcomplete", $.ui.autocomplete, {
_renderMenu: function( ul, items ) {
var that = this, cat = "";
$(ul).addClass('main-search');
$.each( items, function( index, item ) {
if ((item.type != "undefined") && ( item.type != cat )) {
that._renderCategory( ul, item, cat );
cat = item.type;
}
that._renderItemData( ul, item, cat);
}); // end $.each
$('#ta-footer').remove();
$('.ui-autocomplete').append($('<li class="ta-login" id="ta-footer" />').html('<a href="/login/loginInitAction.do?method=initialize&amp;login=mktypeahead" target="_top"><strong>Gartner client?</strong> See your complete My Gartner Search experience.</a>'));
}, // end _renderMenu
_renderCategory: function( ul, item, cat ) {
var cate = item.type;
return $('<li class="cat-'+cate+'">').text(cate == 'term' ? ' ' : cate).addClass("ui-autocomplete-category").appendTo(ul);
}, // end _renderCategory
_renderItem: function( ul, item, cat) {
this.term = this.term.replace('[', '').replace('*','');
var re = new RegExp('\\b'+this.term, 'gi') ;
var t = item.label.replace(re,'<span class="highlighted">' + this.term + '</span>');
return $('<li class="cat-'+cat+'">' )
.append( "<a>" + t + "</a>" )
.appendTo( ul );
}, // end _renderItem
_renderItemData: function( ul, item , cat) {
return this._renderItem( ul, item , cat).data( "ui-autocomplete-item", item );
} // end _renderItemData
});
} catch (err) {}
try {
$("#keywords").catcomplete({
source: function( request, response ) {
var term = request.term.replace('[','');
if ( term in searchtypeaheadcache ) {
response( searchtypeaheadcache[ term ] );
return;
}
$.ajax({
type: 'GET',
url: typeaheadsugurl.replace('http:','') + '?num=5&keywords=' + request.term,
dataType: 'json',
success: function(data) {
try {
if (typeof data != 'undefined' && typeof data.suggestions != 'undefined') {
var suggestions = $.map(data.suggestions, function(item) {
return { label: item.term, type: item.type, idval: item.id} ;
}); // end $.map()
searchtypeaheadcache[ term ] = suggestions;
response(suggestions);
}
}
catch (excep) {
var href = window.location.href;
if ( // Show error information when in a development environment:
(
href.indexOf('developer') !== -1 ||
href.indexOf('wwwdvc') !== -1
) && (!$('body').hasClass('ie'))
) console.log(excep);
}
} // end success()
}); // end $.ajax()
},
minLength: 0,
select: function (event, ui) {
$(this).val(ui.item.value);
if (ui.item.type == 'title') window.location = docurl + ui.item.idval + "?ref=TypeAheadSearch";
else submitSearch('gSearchForm','');
}, // end select()
position: {
of: $('#keywords'),
my: 'left top',
at: kwPos,
collision: 'fit'
}
}); // end catcomplete()
} catch (err) {
var href = window.location.href;
if ( // Show error information when in a development environment:
(
href.indexOf('developer') !== -1 ||
href.indexOf('wwwdvc') !== -1
) && (!$('body').hasClass('ie'))
) console.log(err);
}
try {
if (!($('body').hasClass('ie') && $('body').hasClass('v-8'))) $("#keywords").focus(function() { $(this).catcomplete("search"); });
} catch (err) {}

// }, 1000);
}); // end doc ready


//localStorage.clear();

$(function(){ 
  if (localstorageenabled ==true){
    // Checks to see if it is the first visit and message wasn't dismissed
    if(localStorage.getItem('firstVisit') != 'true') {
      $('#cookie-alert').show();
    } else {
      // If visit is already stored
      $('#cookie-alert').hide();
    }

    $(".close-me").click(function(){
      localStorage.setItem('firstVisit', 'true');
      $('#cookie-alert').slideUp('slow');
    });
  }
});

function storageEnabled() {
  try {
      localStorage.setItem("__test", "data");
  } catch (e) {
      if (/QUOTA_?EXCEEDED/i.test(e.name)) {
          return false;
      }
  }
  return true;
}

var localstorageenabled = storageEnabled();
//console.log('localStorage enabled: ' + storageEnabled());
