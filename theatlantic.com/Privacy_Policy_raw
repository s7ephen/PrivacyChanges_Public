</div>

<script type="text/javascript">
    $(".bottompersistent-wrapper .close").on("click", function(){
        $(".bottompersistent-wrapper").slideUp(250);
    });

    /**
     * Show the close button after 1 second.
     */
    Atlantic.ad_queue = Atlantic.ad_queue || [];
    Atlantic.ad_queue.push(function(){
        Atlantic.Ad.sizeListener("bottompersistent", function(pos, size){
            if (size) {
                window.setTimeout(function(){
                    $(".bottompersistent-wrapper .close").show();
                }, 1000);

                // Auto close, enable when approved
                // window.setTimeout(function(){
                //     $(".bottompersistent-wrapper").slideUp();
                // }, 6000);
            }
        })
    });

</script>


