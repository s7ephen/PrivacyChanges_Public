<script>
 $(document).ready(function (e) {
     //ensemble
     var params = {};
     if (location.search) {
         var parts = location.search.substring(1).split('&');
         for (var i = 0; i < parts.length; i++) {
             var nv = parts[i].split('=');
             if (!nv[0]) {
                 continue;
             }
             params[nv[0]] = nv[1] || true;
         }
     }
     var PageUrl = window.location.href.indexOf("lb=") > 0;
     var currentLoc = window.location.href;
     var lbURL = params.lb;
     var ensembleURL = "htStore/ensemble.jsp?ensPath=" + lbURL + "&nodePath=" + currentLoc;
     if (isShopByEnsembleEnabled && PageUrl === true) {
         $.colorbox({
             href: ensembleURL,
             width: 909,
             height: 1030,
             scrolling: false
         });
     }
 });</script>
 
