        window.completeAddToAction = function(contentToShow, hideAfter) {
            $(contentToShow).slideDown(300);
            window.setTimeout(function() {$(contentToShow).fadeOut(200)}, hideAfter);
            $.colorbox.close();
            $("html, body").animate({ scrollTop: 0 }, 600);
        };
    });
